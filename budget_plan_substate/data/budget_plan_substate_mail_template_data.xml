<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
    <record id="mail_template_data_budget_plan_substate_verified" model="mail.template">
        <field name="name">Verified</field>
        <field name="model_id" ref="budget_plan.model_budget_plan" />
        <field name="subject">Your budget plan ${object.name} is verified</field>
        <field name="use_default_to" eval="True" />
        <field name="body_html" type="html">
            <div>
    Dear stakeholders,<br />
    This email is to inform that your budget plan ${object.name} was verified by budget team.
       <br /><br />
    Thank you,
    <br />
</div>
        </field>
        <field name="auto_delete" eval="True" />
    </record>
</odoo>
