<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
    <!-- Add new activity purchase deposit -->
    <record id="budget_kpi_purchase_deposit" model="budget.kpi">
        <field name="name">Purchase Deposit</field>
    </record>
    <record id="budget_activity_purchase_deposit" model="budget.activity">
        <field name="name">Purchase Deposit</field>
        <field
            name="kpi_id"
            ref="budget_activity_purchase_deposit.budget_kpi_purchase_deposit"
        />
    </record>
    <!-- Add new product purchase deposit -->
    <record id="product_purchase_deposit" model="product.product">
        <field name="name">Purchase Deposit</field>
        <field name="type">service</field>
        <field name="purchase_method">purchase</field>
    </record>
</odoo>
