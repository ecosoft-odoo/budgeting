<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="stock_request_order_form" model="ir.ui.view">
        <field name="name">stock.request.order.form - stock_request_analytic</field>
        <field name="model">stock.request.order</field>
        <field
            name="inherit_id"
            ref="stock_request_analytic.stock_request_order_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='stock_request_ids']/tree//field[@name='analytic_account_id']"
                position="after"
            >
                <field name="analytic_tag_all" widget="many2many_tags" invisible="1" />
                <field name="domain_tag_ids" widget="many2many_tags" invisible="1" />
                <field name="fund_all" widget="many2many_tags" invisible="1" />
                <field name="fund_id" />
            </xpath>
            <xpath
                expr="//field[@name='stock_request_ids']/tree//field[@name='analytic_tag_ids']"
                position="attributes"
            >
                <attribute
                    name="domain"
                >[('id', 'in', analytic_tag_all or []), '|', ('id', 'in', domain_tag_ids or []), ('analytic_dimension_id.by_sequence', '=', False)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
