<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="budget_control_view_form" model="ir.ui.view">
        <field name="name">budget.control.view.form</field>
        <field name="model">budget.control</field>
        <field
            name="inherit_id"
            ref="budget_control_revision.budget_control_view_form"
        />
        <field name="arch" type="xml">
            <!-- Invisible as budget plan revision take over -->
            <xpath expr="//button[@name='create_revision']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='revision_number']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
