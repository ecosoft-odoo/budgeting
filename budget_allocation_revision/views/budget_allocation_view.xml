<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Budget Allocation -->
    <record id="budget_allocation_view_form_without_header" model="ir.ui.view">
        <field name="name">budget.allocation.view.form</field>
        <field name="model">budget.allocation</field>
        <field name="inherit_id" ref="budget_allocation.budget_allocation_view_form" />
        <field name="priority" eval="35" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//header" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>
    <record id="budget_allocation_view_tree" model="ir.ui.view">
        <field name="name">budget.allocation.view.tree</field>
        <field name="model">budget.allocation</field>
        <field name="inherit_id" ref="budget_allocation.budget_allocation_view_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="revision_number" />
            </xpath>
        </field>
    </record>
    <record id="budget_allocation_view_search" model="ir.ui.view">
        <field name="name">budget.allocation.view.search</field>
        <field name="model">budget.allocation</field>
        <field
            name="inherit_id"
            ref="budget_allocation.budget_allocation_view_search"
        />
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter
                    name="revision_number"
                    string="Revision"
                    context="{'group_by': 'revision_number'}"
                />
            </xpath>
        </field>
    </record>
    <record id="budget_allocation_view_form" model="ir.ui.view">
        <field name="name">budget.allocation.view.form</field>
        <field name="model">budget.allocation</field>
        <field name="inherit_id" ref="budget_allocation.budget_allocation_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_draft']" position="before">
                <button
                    name="create_revision"
                    string="New Revision"
                    type="object"
                    states="cancel"
                    confirm="This operation cannot be undone. Are you sure to continue?"
                />
            </xpath>
            <xpath expr="//group[@name='budget_allocation_right']" position="inside">
                <field name="init_revision" />
                <field name="revision_number" readonly="1" />
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page
                    string="Revisions"
                    attrs="{'invisible': [('has_old_revisions', '=', False)]}"
                >
                    <field
                        name="old_revision_ids"
                        context="{'form_view_ref': 'budget_plan.view_budget_plan_form_without_header'}"
                        attrs="{'invisible': [('has_old_revisions', '=', False)]}"
                    >
                        <tree>
                            <field name="name" />
                            <field name="create_date" string="Superseeded on" />
                            <field name="create_uid" string="Superseeded by" />
                            <field name="state" invisible="1" />
                        </tree>
                    </field>
                    <group attrs="{'invisible': [('current_revision_id', '=', False)]}">
                        <field name="current_revision_id" />
                        <field name="has_old_revisions" invisible="1" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
