<odoo>

    <record id="split_project_wizard_form" model="ir.ui.view">
        <field name="name">split.project.wizard.form</field>
        <field name="model">split.project.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="project_data">
                    <group name="left">
                        <field name="parent_project" />
                        <field name="department_id" />
                    </group>
                    <group name="right">
                        <field name="date_from" />
                        <field name="date_to" />
                    </group>
                </group>
                <group name="lines">
                    <field name="line_ids">
                        <tree editable="bottom">
                            <field name="wizard_id" invisible="1" />
                            <field name="project_name" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button
                        name="split_project"
                        string="Split Project"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
