<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="budget_source_fund_line_filter" model="ir.ui.view">
        <field name="name">budget.source.fund.line.filter</field>
        <field name="model">budget.source.fund.line</field>
        <field
            name="inherit_id"
            ref="budget_source_fund.budget_source_fund_line_filter"
        />
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter
                    name="operating_unit"
                    string="Operating Unit"
                    context="{'group_by':'operating_unit_id'}"
                />
            </xpath>
        </field>
    </record>

    <record id="view_budget_source_fund_line_tree" model="ir.ui.view">
        <field name="name">budget.source.fund.line.tree</field>
        <field name="model">budget.source.fund.line</field>
        <field
            name="inherit_id"
            ref="budget_source_fund.view_budget_source_fund_line_tree"
        />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='budget_control_id']" position="after">
                <field name="operating_unit_id" optional="show" />
            </xpath>
        </field>
    </record>

    <!-- Menu source of funds all -->
    <record id="view_budget_source_fund_line_form" model="ir.ui.view">
        <field name="name">budget.source.fund.line.form</field>
        <field name="model">budget.source.fund.line</field>
        <field
            name="inherit_id"
            ref="budget_source_fund.view_budget_source_fund_line_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='source_fund_line_right']" position="inside">
                <field name="operating_unit_id" />
            </xpath>
        </field>
    </record>

</odoo>
