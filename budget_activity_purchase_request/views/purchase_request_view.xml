<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_purchase_request_form" model="ir.ui.view">
        <field name="name">purchase.request.form</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field['line_ids']/tree/field[@name='product_id']"
                position="after"
            >
                <field
                    name="activity_id"
                    attrs="{'required': [('analytic_account_id', '!=', False)]}"
                />
            </xpath>
        </field>
    </record>
    <record id="view_purchase_request_line_details" model="ir.ui.view">
        <field name="name">purchase.request.line.details.form</field>
        <field name="model">purchase.request.line</field>
        <field
            name="inherit_id"
            ref="purchase_request.view_purchase_request_line_details"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//group[@name='main']//field[@name='product_id']"
                position="after"
            >
                <field
                    name="activity_id"
                    attrs="{'required': [('analytic_account_id', '!=', False)], 'readonly': [('is_editable','=', False)]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
