<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Budget Control Lines -->
    <record id="budget_control_line_tree_view_readonly" model="ir.ui.view">
        <field name="name">budget.control.line.tree.view.readonly</field>
        <field name="model">budget.control.line</field>
        <field
            name="inherit_id"
            ref="budget_control.budget_control_line_tree_view_readonly"
        />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="is_readonly" />
            </xpath>
            <field name="amount" position="attributes">
                <attribute
                    name="attrs"
                >{'readonly': [('is_readonly', '=', True)]}</attribute>
            </field>
        </field>
    </record>
    <record id="budget_control_view_form" model="ir.ui.view">
        <field name="name">budget.control.view.form</field>
        <field name="model">budget.control</field>
        <field name="inherit_id" ref="budget_control.budget_control_view_form" />
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree" position="inside">
                <field name="is_readonly" />
            </xpath>
            <xpath
                expr="//field[@name='line_ids']/tree/field[@name='amount']"
                position="replace"
            >
                <field name="amount" decoration-danger="is_readonly != False" />
            </xpath>
        </field>
    </record>
</odoo>
