<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_budget" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.budget</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="budget_control.res_config_settings_view_form_budget"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@name='budget_control_setting_container']"
                position="inside"
            >
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="budget_control_revision_lock_amount"
                >
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <label for="budget_control_revision_lock_amount" />
                        <div class="text-muted">
                            By default value is set to "No Lock".
                            Users can change this setting to prevent editing after a revision has been made.
                            There are two levels of locking: "Lock until current month" and "Lock until last month".
                        </div>
                        <div class="mt8">
                            <field
                                name="budget_control_revision_lock_amount"
                                class="o_light_label"
                                widget="radio"
                                required="True"
                            />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
