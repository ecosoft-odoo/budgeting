<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="budget_control_purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']/tree//field[@name='json_budget_popover']"
                position="after"
            >
                <field name="fund_all" invisible="1" />
                <field name="fund_id" optional="show" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/form//field[@name='account_analytic_id']"
                position="after"
            >
                <field name="fund_all" invisible="1" />
                <field name="fund_id" />
            </xpath>
            <!-- additional domain is needed on edit mode, which is not covered by onchange -->
            <xpath
                expr="//field[@name='order_line']/tree//field[@name='analytic_tag_ids']"
                position="after"
            >
                <field name="domain_tag_ids" invisible="1" />
                <field name="analytic_tag_all" invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree//field[@name='analytic_tag_ids']"
                position="attributes"
            >
                <attribute
                    name="domain"
                >[('id', 'in', analytic_tag_all or []), '|', ('id', 'in', domain_tag_ids or []), ('analytic_dimension_id.by_sequence', '=', False)]</attribute>
            </xpath>

        </field>
    </record>
</odoo>
