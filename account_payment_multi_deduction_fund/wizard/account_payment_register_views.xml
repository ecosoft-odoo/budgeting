<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_payment_register_form" model="ir.ui.view">
        <field name="name">account.payment.register.form</field>
        <field name="model">account.payment.register</field>
        <field
            name="inherit_id"
            ref="account_payment_deduction_analytic.view_account_payment_register_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='writeoff_analytic_tag_ids']" position="after">
                <div
                    attrs="{'invisible': [('payment_difference_handling', '!=', 'reconcile')]}"
                >
                    <field name="fund_all" widget="many2many_tags" invisible="1" />
                    <label for="fund_id" class="oe_edit_only" />
                    <field name="fund_id" />
                </div>
            </xpath>
        </field>
    </record>

    <!-- Multi Deduction -->
    <record id="view_account_payment_multi_register_form" model="ir.ui.view">
        <field name="name">account.payment.multi.register.form</field>
        <field name="model">account.payment.register</field>
        <field
            name="inherit_id"
            ref="account_payment_multi_deduction_analytic.view_account_payment_register_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='deduction_ids']/tree/field[@name='analytic_account_id']"
                position="after"
            >
                <field name="fund_all" widget="many2many_tags" invisible="1" />
                <field name="fund_id" />
            </xpath>
        </field>
    </record>
</odoo>
