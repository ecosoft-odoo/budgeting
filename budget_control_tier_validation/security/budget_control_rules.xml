<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
    <!-- Allow user in tier validation can approve and see document budget control sheet -->
    <function model="ir.rule" name="write">
        <value eval="[ref('budget_control.rule_budget_control_budget_user')]" />
        <value
            eval="{'domain_force': &quot;['|', ('review_ids.reviewer_ids', 'in', [user.id]), ('assignee_id', '=', user.id)]&quot;}"
        />
    </function>
</odoo>
