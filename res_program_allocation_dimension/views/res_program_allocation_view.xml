<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_program_allocation_view_form" model="ir.ui.view">
        <field name="name">res.program.allocation.view.form</field>
        <field name="model">res.program.allocation</field>
        <field
            name="inherit_id"
            ref="res_program_allocation.res_program_allocation_view_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='fund_constraint_ids']/tree/field[@name='analytic_account_id']"
                position="after"
            >
                <field
                    name="analytic_tag_ids"
                    widget="many2many_tags"
                    options="{'no_create': True}"
                />
            </xpath>
        </field>
    </record>
</odoo>
