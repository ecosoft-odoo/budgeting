<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

    <record id="group_all_ou_budget_transfer" model="res.groups">
        <field name="name">Access all OUs' budget transfer</field>
        <field name="category_id" ref="operating_unit.module_operating_units" />
    </record>

    <function model="ir.rule" name="write">
        <value
            eval="[ref('budget_control_operating_unit.ir_rule_budget_transfer_allowed_operating_units')]"
        />
        <value
            eval="{'domain_force': &quot;['|','|',(1, '=', 1) if user.has_group('budget_control_operating_unit_access_all.group_all_ou_budget_transfer') else (0, '=', 1),('operating_unit_ids','=',False),('operating_unit_ids','in', user.operating_unit_ids.ids)]&quot;}"
        />
    </function>

</odoo>
