<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
    <record id="group_all_ou_budget_control" model="res.groups">
        <field name="name">Access all OUs' budget control</field>
        <field name="category_id" ref="operating_unit.module_operating_units" />
    </record>

    <!-- Access all budget control -->
    <function model="ir.rule" name="write">
        <value
            eval="[ref('budget_control_operating_unit.ir_rule_budget_control_allowed_operating_units')]"
        />
        <value
            eval="{'domain_force': &quot;['|', '|', (1, '=', 1) if user.has_group('budget_control.group_budget_control_manager') or user.has_group('budget_control_operating_unit_access_all.group_all_ou_budget_control') else (0, '=', 1), ('operating_unit_id','=',False), ('operating_unit_id','in', user.operating_unit_ids.ids)]&quot;}"
        />
    </function>
</odoo>
