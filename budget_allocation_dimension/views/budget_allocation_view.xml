<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="budget_allocation_view_form" model="ir.ui.view">
        <field name="name">budget.allocation.view.form</field>
        <field name="model">budget.allocation</field>
        <field name="inherit_id" ref="budget_allocation.budget_allocation_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='allocation_line_ids']/tree/field[@name='analytic_account_id']"
                position="after"
            >
                <field name="domain_tag_ids" invisible="1" />
                <field
                    name="analytic_tag_ids"
                    widget="many2many_tags"
                    options="{'no_create': True}"
                    domain="['|', ('id', 'in', domain_tag_ids or []), ('analytic_dimension_id.by_sequence', '=', False)]"
                    groups="analytic.group_analytic_tags"
                />
            </xpath>
        </field>
    </record>
</odoo>
