<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="budget_kpi_view_form" model="ir.ui.view">
        <field name="name">budget.kpi.view.form</field>
        <field name="model">budget.kpi</field>
        <field name="inherit_id" ref="budget_control.budget_kpi_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page name="activity" string="Activity">
                        <field name="activity_ids" />
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
