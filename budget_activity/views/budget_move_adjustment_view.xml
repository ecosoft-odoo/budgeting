<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_budget_move_adjustment_form" model="ir.ui.view">
        <field name="name">view.budget.move.adjustment.form</field>
        <field name="model">budget.move.adjustment</field>
        <field
            name="inherit_id"
            ref="budget_control.view_budget_move_adjustment_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='adjust_item_ids']//tree/field[@name='account_id']"
                position="before"
            >
                <field
                    name="activity_id"
                    attrs="{'required': [('analytic_account_id', '!=', False)]}"
                    optional="show"
                />
            </xpath>
            <xpath
                expr="//page[@name='adjust_item_ids']//form//field[@name='account_id']"
                position="before"
            >
                <field name="activity_id" />
            </xpath>
        </field>
    </record>
</odoo>
