<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Budget Activity Keyword -->
    <record id="budget_activity_keyword_view_tree" model="ir.ui.view">
        <field name="name">budget.activity.keyword.view.tree</field>
        <field name="model">budget.activity.keyword</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="active" />
            </tree>
        </field>
    </record>
    <record id="budget_activity_keyword_view_search" model="ir.ui.view">
        <field name="name">budget.activity.keyword.view.search</field>
        <field name="model">budget.activity.keyword</field>
        <field name="priority" eval="15" />
        <field name="arch" type="xml">
            <search string="Search Budget Activity Keywords">
                <field
                    name="name"
                    string="Keyword"
                    filter_domain="[('name','ilike',self)]"
                />
                <filter
                    name="active"
                    string="Archived"
                    domain="[('active', '=', False)]"
                />
                <group string="Group By" name="groupby">
                    <filter
                        string="Company"
                        name="groupby_company"
                        context="{'group_by': 'company_id'}"
                        groups="base.group_multi_company"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="budget_activity_keyword_view_form" model="ir.ui.view">
        <field name="name">budget.activity.view.form</field>
        <field name="model">budget.activity.keyword</field>
        <field name="arch" type="xml">
            <form string="Budget Activity Keywords">
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="active" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="budget_activity_keyword_action" model="ir.actions.act_window">
        <field name="name">Budget Activity Keywords</field>
        <field name="view_id" ref="budget_activity_keyword_view_tree" />
        <field name="res_model">budget.activity.keyword</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Budget Activity -->
    <record id="budget_activity_view_tree" model="ir.ui.view">
        <field name="name">budget.activity.view.tree</field>
        <field name="model">budget.activity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="kpi_id" />
                <field name="account_id" />
                <field name="keyword_ids" widget="many2many_tags" optional="hide" />
            </tree>
        </field>
    </record>
    <record id="view_budget_activity_filter" model="ir.ui.view">
        <field name="name">view.budget.activity.filter</field>
        <field name="model">budget.activity</field>
        <field name="priority" eval="15" />
        <field name="arch" type="xml">
            <search string="Search Budget activity">
                <field name="name" string="Budget Activity" />
                <field name="kpi_id" string="KPI" />
                <field name="account_id" string="Account" />
                <filter
                    name="active"
                    string="Archived"
                    domain="[('active', '=', False)]"
                />
                <group string="Group By" name="groupby">
                    <filter
                        string="Account"
                        name="groupby_account"
                        context="{'group_by': 'account_id'}"
                    />
                    <filter
                        string="KPI"
                        name="groupby_budget_kpi"
                        context="{'group_by': 'kpi_id'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="budget_activity_view_form" model="ir.ui.view">
        <field name="name">budget.activity.view.form</field>
        <field name="model">budget.activity</field>
        <field name="arch" type="xml">
            <form string="Budget activity Sheet">
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                        <h4>
                            <field name="kpi_id" placeholder="KPI" />
                        </h4>
                    </div>
                    <group>
                        <group>
                            <field name="account_id" />
                            <field name="keyword_ids" widget="many2many_tags" />
                        </group>
                        <group>
                            <field name="active" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="budget_activity_action" model="ir.actions.act_window">
        <field name="name">Budget Activity</field>
        <field name="view_id" ref="budget_activity_view_tree" />
        <field name="res_model">budget.activity</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
