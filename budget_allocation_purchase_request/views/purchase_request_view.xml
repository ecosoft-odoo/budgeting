<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_purchase_request_form" model="ir.ui.view">
        <field name="name">purchase.request.form</field>
        <field name="model">purchase.request</field>
        <field
            name="inherit_id"
            ref="budget_control_purchase_request.view_purchase_request_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='line_ids']/tree/field[@name='json_budget_popover']"
                position="after"
            >
                <field name="fund_all" invisible="1" />
                <field name="fund_id" optional="show" />
                <field name="domain_tag_ids" invisible="1" />
                <field name="analytic_tag_all" invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='line_ids']/tree//field[@name='analytic_tag_ids']"
                position="attributes"
            >
                <attribute name="widget">many2many_tags</attribute>
                <attribute
                    name="domain"
                >[('id', 'in', analytic_tag_all or []), '|', ('id', 'in', domain_tag_ids or []), ('analytic_dimension_id.by_sequence', '=', False)]</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_purchase_request_line_details" model="ir.ui.view">
        <field name="name">purchase.request.line.details.form</field>
        <field name="model">purchase.request.line</field>
        <field
            name="inherit_id"
            ref="purchase_request.view_purchase_request_line_details"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//group[@name='main']//field[@name='analytic_account_id']"
                position="after"
            >

                <field name="fund_all" invisible="1" />
                <field
                    name="fund_id"
                    attrs="{'readonly': [('is_editable', '=', False)]}"
                />
                <field name="domain_tag_ids" invisible="1" />
                <field name="analytic_tag_all" invisible="1" />
            </xpath>
            <xpath
                expr="//group[@name='main']//field[@name='analytic_tag_ids']"
                position="attributes"
            >
                <attribute name="widget">many2many_tags</attribute>
                <attribute
                    name="domain"
                >[('id', 'in', analytic_tag_all or []), '|', ('id', 'in', domain_tag_ids or []), ('analytic_dimension_id.by_sequence', '=', False)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
