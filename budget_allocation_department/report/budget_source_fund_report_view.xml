<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_source_fund_monitor_report_tree" model="ir.ui.view">
        <field name="name">budget.source.fund.report.tree</field>
        <field name="model">budget.source.fund.report</field>
        <field
            name="inherit_id"
            ref="budget_allocation.view_source_fund_monitor_report_tree"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_account_id']" position="after">
                <field name="department_id" optional="show" />
            </xpath>
        </field>
    </record>
    <record id="view_source_fund_monitor_report_search" model="ir.ui.view">
        <field name="name">budget.source.fund.report.search</field>
        <field name="model">budget.source.fund.report</field>
        <field
            name="inherit_id"
            ref="budget_allocation.view_source_fund_monitor_report_search"
        />
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter
                    string="Department"
                    name="group_by_department_id"
                    context="{'group_by':'department_id'}"
                />
            </xpath>
        </field>
    </record>
</odoo>
