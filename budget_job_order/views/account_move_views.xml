<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_account_id']"
                position="after"
            >
                <field
                    name="job_order_id"
                    options="{'no_create': True}"
                    context="{'default_analytic_account_id': analytic_account_id}"
                    groups="budget_job_order.group_budget_job_order"
                />
            </xpath>
            <xpath
                expr="//field[@name='line_ids']/tree/field[@name='analytic_account_id']"
                position="after"
            >
                <field
                    name="job_order_id"
                    options="{'no_create': True}"
                    context="{'default_analytic_account_id': analytic_account_id}"
                    groups="budget_job_order.group_budget_job_order"
                />
            </xpath>
        </field>
    </record>

</odoo>
