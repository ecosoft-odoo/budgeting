<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_analytic_account_form" model="ir.ui.view">
        <field name="name">analytic.analytic.account.form</field>
        <field name="model">account.analytic.account</field>
        <field
            name="inherit_id"
            ref="budget_control.view_account_analytic_account_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page name="job_order" string="Job Order">
                        <field name="job_order_ids" editable="bottom">
                            <tree name="analytic_job_order_tree" editable="bottom">
                                <field name="name" string="Job Name" />
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
