<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="budget_period_view_form" model="ir.ui.view">
        <field name="name">budget.period.view.form</field>
        <field name="model">budget.period</field>
        <field
            name="inherit_id"
            ref="budget_control_purchase.budget_period_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='purchase']" position="after">
                <label for="agreement" invisible="1" />
                <div name="agreement" class="o_row">
                    <field name="agreement" invisible="1" />
                    <span>On Agreement</span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
