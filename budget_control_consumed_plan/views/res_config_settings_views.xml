<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_view_form_budget" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.budget</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@name='budget_control_setting_container']"
                position="inside"
            >
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="budget_update_consumed_plan"
                >
                    <div class="o_setting_left_pane">
                        <field name="group_manual_date_consumed_plan" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_manual_date_consumed_plan" />
                        <div class="text-muted">
                            If checked, user can select date for update consumed amount
                            in budget control plan.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
