<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_budget" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.budget</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="budget_control.res_config_settings_view_form_budget"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='budget_control']" position="inside">
                <h2>Activity</h2>
                <div
                    class="row mt16 o_settings_container"
                    name="budget_activity_setting_container"
                >
                    <div class="col-12 col-lg-6 o_setting_box" id="budget_activity_tag">
                        <div class="o_setting_left_pane">
                            <field name="group_budget_activity_tag" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_budget_activity_tag" />
                            <div class="text-muted">
                                Allows to manage budget activity tags
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
