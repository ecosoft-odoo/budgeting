<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Analytic Account -->
    <record id="view_account_analytic_account_form" model="ir.ui.view">
        <field name="name">account.analytic.account.form</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form" />
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="is_required_project" invisible="1" />
                <field
                    name="project_id"
                    attrs="{'required': [('is_required_project', '=', True)]}"
                />
                <field name="department_id" position="move" />
            </field>
            <field name="department_id" position="before">
                <field name="is_required_department" invisible="1" />
            </field>
            <field name="department_id" position="attributes">
                <attribute
                    name="attrs"
                >{'required': [('is_required_department', '=', True)]}</attribute>
            </field>
        </field>
    </record>
    <record id="view_account_analytic_account_list" model="ir.ui.view">
        <field name="name">account.analytic.account.list</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_list" />
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="project_id" />
            </field>
        </field>
    </record>
    <record id="view_account_analytic_account_search" model="ir.ui.view">
        <field name="name">account.analytic.account.search</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_search" />
        <field name="arch" type="xml">
            <xpath expr="//search/group" position="inside">
                <filter
                    name="project_id"
                    string="Project"
                    context="{'group_by': 'project_id'}"
                />
            </xpath>
        </field>
    </record>
</odoo>
